# =======================
# APPLICATION
# =======================
NODE_ENV=development
PORT=3000
APP_NAME=Residenz Flow Forge
APP_VERSION=1.0.0
API_URL=http://localhost:3000

# =======================
# DATABASE (PostgreSQL)
# =======================
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=residenz_flow
DATABASE_USER=postgres
DATABASE_PASSWORD=your-postgres-password
DATABASE_SYNCHRONIZE=false
DATABASE_LOGGING=false

# =======================
# JWT AUTHENTICATION
# =======================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRATION=30d

# =======================
# REDIS CACHE
# =======================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# =======================
# MERCADOPAGO (PRIMARY - Yape/Plin QR)
# =======================
# Setup: https://www.mercadopago.com.pe/developers/en/docs/checkout-api/prerequisites
# Dashboard: https://www.mercadopago.com.pe/admin/credentials
# 
# Webhook URL: POST {API_URL}/payments/webhook/mercadopago
#
MERCADOPAGO_ENVIRONMENT=sandbox
MERCADOPAGO_ACCESS_TOKEN=APP_USR_your-sandbox-access-token
MERCADOPAGO_PUBLIC_KEY=APP_USR_your-sandbox-public-key
MERCADOPAGO_WEBHOOK_TOKEN=your-webhook-verification-token

# =======================
# STRIPE (SECONDARY - Card Payments)
# =======================
# Setup: https://stripe.com/docs/payments/accept-a-payment
# Dashboard: https://dashboard.stripe.com/apikeys
#
# Webhook URL: POST {API_URL}/payments/webhook/stripe
#
STRIPE_SECRET_KEY=sk_test_your-secret-key
STRIPE_PUBLIC_KEY=pk_test_your-public-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# =======================
# PROMETEO (Bank Transfers for Payouts)
# =======================
# Setup: https://www.prometeo.com.pe/docs/
# Dashboard: https://dashboard.prometeo.com.pe/
#
PROMETEO_API_KEY=your-prometeo-api-key
PROMETEO_CLIENT_ID=your-prometeo-client-id

# =======================
# TWILIO (SMS/OTP)
# =======================
# Setup: https://www.twilio.com/docs/sms
# Console: https://console.twilio.com/
#
TWILIO_ACCOUNT_SID=AC_your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+51_your-phone-number

# =======================
# METAMAP (KYC Verification)
# =======================
# Setup: https://docs.metamap.com/
# Dashboard: https://dashboard.metamap.com/
#
METAMAP_API_KEY=your-metamap-api-key
METAMAP_CLIENT_ID=your-metamap-client-id
METAMAP_WEBHOOK_SECRET=your-metamap-webhook-secret

# =======================
# EMAIL (Notifications)
# =======================
# Using Gmail with App Password
# Setup: https://support.google.com/accounts/answer/185833
#
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM=noreply@residenzflow.com

# =======================
# AWS S3 (File Uploads)
# =======================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_BUCKET=residenz-flow-bucket

# =======================
# FEATURE FLAGS
# =======================
FEATURE_YAPE_PAYMENTS=true
FEATURE_PLIN_PAYMENTS=true
FEATURE_CARD_PAYMENTS=true
FEATURE_BANK_TRANSFERS=true

# =======================
# CORS & RATE LIMITING
# =======================
CORS_ORIGIN=http://localhost:5173,http://localhost:3000
CORS_CREDENTIALS=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =======================
# LOGGING
# =======================
LOG_LEVEL=debug
LOG_FORMAT=json
